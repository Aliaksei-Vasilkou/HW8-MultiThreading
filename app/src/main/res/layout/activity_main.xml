<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.coyclab.hw8_multithreading.MainActivity">

    <TextView
        android:id="@+id/text_view_test_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/text_view_test_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="36dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_view_test_text">

        <Button
            android:id="@+id/button_thread_using"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/button_thread_using_text"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_async_task_using"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/button_asynctask_using_text"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/button_executor_using"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/button_executor_using_text"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</RelativeLayout>
